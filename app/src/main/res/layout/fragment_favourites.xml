<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.favourites.FavouritesFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:title="@string/favorites"
        app:titleTextAppearance="@style/TextMedium_22_500"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_vacancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/placeholder_button"
        android:layout_width="@dimen/placeholder_width"
        android:layout_height="@dimen/placeholder_height"
        android:src="@drawable/empty_favorite_vacancy"
        android:layout_marginTop="158dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/placeholder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:gravity="center"
        style="@style/TextMedium_22_500"
        android:visibility="gone"/>
</LinearLayout>
