<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_standard"
    android:paddingTop="@dimen/padding_small_9"
    android:paddingEnd="@dimen/padding_standard"
    android:paddingBottom="@dimen/padding_small_9">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/company_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_company_logo"
        android:src="@drawable/vacancy_logo_placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageRounded" />

    <TextView
        android:id="@+id/vacancy_name"
        style="@style/Text.Title"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:text="@string/vacancy_jobtitle"
        app:layout_constraintStart_toEndOf="@id/company_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/company_name"
        style="@style/Text.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:text="@string/company_name_example"
        app:layout_constraintStart_toEndOf="@+id/company_logo"
        app:layout_constraintTop_toBottomOf="@+id/vacancy_name" />

    <TextView
        android:id="@+id/company_salary"
        style="@style/Text.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:text="@string/vacancy_jobprice"
        app:layout_constraintStart_toEndOf="@+id/company_logo"
        app:layout_constraintTop_toBottomOf="@+id/company_name" />

</androidx.constraintlayout.widget.ConstraintLayout>

