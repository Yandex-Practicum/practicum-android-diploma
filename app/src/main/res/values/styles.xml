<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="textInputStyle">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/bar_text_size</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="hintTextColor">?attr/hintTextColor</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="VacancyHeaderStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tv_vacancy_title_size</item>
    </style>

    <style name="VacancyTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/tv_vacancy_company_size</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tv_vacancy_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VacancyAmountTextViewStyle">
        <item name="android:layout_marginTop">@dimen/search_margin_s</item>
        <item name="android:layout_marginBottom">@dimen/search_margin_xs</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/search_margin_s</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/tv_button_size</item>
    </style>

    <style name="bottomNavigationView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textSize">@dimen/tv_bottom_bar_size</item>
        <item name="android:background">?attr/bottomNavViewBackgroundColor</item>
        <item name="itemIconTint">@drawable/bottom_nav_view_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_view_selector</item>
    </style>

    <style name="developerItem">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tv_detailed_vacancy_margin_m</item>
        <item name="android:textColor">?attr/teamTextColor</item>
        <item name="android:textSize">@dimen/tv_team_content_size</item>
    </style>

    <style name="VacancyDetailsValueTextViewStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/tv_detailed_vacancy_m</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="VacancyDetailsTitleTextViewStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tv_detailed_vacancy_l</item>
        <item name="fontWeight">500</item>
    </style>
</resources>
