<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_color_selector</item>
        <item name="itemTextAppearanceInactive">@style/bottom_navigation_view_inactive_text_style</item>
        <item name="itemTextAppearanceActive">@style/bottom_navigation_view_active_text_style</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="iconSize">24dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>
    <style name="bottom_navigation_view_inactive_text_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>
    <style name="bottom_navigation_view_active_text_style" parent="bottom_navigation_view_inactive_text_style">
        <item name="android:textColor">@color/main_blue_E7</item>
    </style>
</resources>
