<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BoldText32">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="MediumText22">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="MediumText16" parent="MediumText22">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="RegularText16">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="RegularText12" parent="RegularText16">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="BottomNavBar">
        <item name="backgroundTint">?attr/whiteToBlack</item>
    </style>

    <style name="BottomNavBarTextStyle" parent="RegularText12" />

    <style name="SimpleToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:background">?attr/whiteToBlack</item>
        <item name="navigationIconTint">?attr/blackToWhite</item>
        <item name="titleTextAppearance">@style/MediumText22</item>
    </style>

    <style name="TeammateTitleTextStyle" parent="BoldText32">
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:paddingVertical">@dimen/dp_8</item>
    </style>

    <style name="TeammatesTextStyle" parent="MediumText16">
        <item name="android:paddingTop">@dimen/dp_16</item>
    </style>

    <style name="Teammate1TextStyle" parent="MediumText16">
        <item name="android:paddingTop">@dimen/dp_24</item>
    </style>

    <style name="FragmentBgStyle">
        <item name="android:background">?attr/whiteToBlack</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_12</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="EditTextStyle" parent="RegularText16">
        <item name="android:background">@drawable/shape_rounded_rectangle_48</item>
        <item name="android:backgroundTint">?attr/lightGrayToGray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/grayToWhite</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor_color</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GuidelineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RegularWhiteText16" parent="RegularText16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <style name="BottomMenuStyle">
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_end">@dimen/bottom_menu_height</item>
    </style>

    <style name="VacancyTitleStyle" parent="MediumText22">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="VacancyEmployerStyle" parent="RegularText16">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="VacancySalary" parent="RegularText16">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="VacancyDescriptionTextStyle" parent="RegularText16">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="VacancyNameTextStyle" parent="BoldText32">
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="VacancySalaryTextStyle" parent="MediumText22">
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="VacancyEmployerNameTextStyle" parent="MediumText22">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="VacancyEmployerCityTextStyle" parent="RegularText16">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="VacancyExperienceTextStyle" parent="MediumText22">
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="VacancyDescriptionTitleTextStyle" parent="MediumText22">
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ListTextViewStyle" parent="RegularText16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_height</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaceholdersTextStyle" parent="MediumText22" />

    <style name="SelectButtonTextStyle" parent="MediumText22">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="FiltrationScreenItem" parent="RegularText16">
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_24</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/dp_60</item>
    </style>

    <style name="ExpectedSalaryEditText" parent="RegularText16">
        <item name="android:background">@null</item>
        <item name="android:hint">@string/enter_the_amount</item>
        <item name="android:textColorHint">?attr/grayToWhite</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor_color</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ExpectedSalaryEditTextContainer">
        <item name="android:background">@drawable/shape_rounded_rectangle_48</item>
        <item name="android:backgroundTint">?attr/lightGrayToGray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:paddingVertical">@dimen/dp_8</item>
    </style>

    <style name="ApplyButton" parent="MediumText16">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">@dimen/dp_20</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_button_select</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ResetButton" parent="ApplyButton">
        <item name="android:textColor">@color/red</item>
        <item name="backgroundTint">?attr/whiteToBlack</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SelectionInputTextLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">?attr/blackToWhite</item>
    </style>

    <style name="SelectionInputText">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/blackToWhite</item>
        <item name="android:background">?attr/whiteToBlack</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
    </style>

    <style name="industry_edittext">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rounded_rectangle_48</item>
        <item name="android:backgroundTint">?attr/lightGrayToGray</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_48</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/grayToWhite</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor_color</item>
    </style>
</resources>
