<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/countryFragment"
        android:name="ru.practicum.android.diploma.ui.country.CountryFragment"
        android:label="fragment_country"
        tools:layout="@layout/fragment_country" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="ru.practicum.android.diploma.ui.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/filteringFragment"
        android:name="ru.practicum.android.diploma.ui.filtering.FilteringFragment"
        android:label="fragment_filtering"
        tools:layout="@layout/fragment_filtering" >
        <action
            android:id="@+id/action_filteringFragment_to_placeWorkFragment"
            app:destination="@id/placeWorkFragment" />
        <action
            android:id="@+id/action_filteringFragment_to_sectorWorkFragment"
            app:destination="@id/sectorWorkFragment" />
    </fragment>
    <fragment
        android:id="@+id/placeWorkFragment"
        android:name="ru.practicum.android.diploma.ui.placework.PlaceWorkFragment"
        android:label="fragment_place_work"
        tools:layout="@layout/fragment_place_work" >
        <action
            android:id="@+id/action_placeWorkFragment_to_countryFragment"
            app:destination="@id/countryFragment" />
        <action
            android:id="@+id/action_placeWorkFragment_to_regionFragment"
            app:destination="@id/regionFragment" />
    </fragment>
    <fragment
        android:id="@+id/regionFragment"
        android:name="ru.practicum.android.diploma.ui.region.RegionFragment"
        android:label="fragment_region"
        tools:layout="@layout/fragment_region" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_filteringFragment"
            app:destination="@id/filteringFragment" />
        <action
            android:id="@+id/action_searchFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
    </fragment>
    <fragment
        android:id="@+id/sectorWorkFragment"
        android:name="ru.practicum.android.diploma.ui.sectorwork.SectorWorkFragment"
        android:label="fragment_sector_work"
        tools:layout="@layout/fragment_sector_work" />
    <fragment
        android:id="@+id/vacancyFragment"
        android:name="ru.practicum.android.diploma.ui.vacancy.VacancyFragment"
        android:label="fragment_vacancy"
        tools:layout="@layout/fragment_vacancy" />
</navigation>
