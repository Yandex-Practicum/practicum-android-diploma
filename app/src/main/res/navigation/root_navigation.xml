<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.ui.search.SearchFragment"
        android:label="searchFragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_teamFragment"
            app:destination="@id/teamFragment" />
        <action
            android:id="@+id/action_searchFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment" />
        <action
            android:id="@+id/action_searchFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
        <action
            android:id="@+id/action_searchFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/teamFragment"
        android:name="ru.practicum.android.diploma.ui.team.TeamFragment"
        android:label="teamFragment"
        tools:layout="@layout/fragment_team" />
    <fragment
        android:id="@+id/fragmentVacancy"
        android:label="vacancyFragment"
        tools:layout="@layout/fragment_vacancy">

    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="ru.practicum.android.diploma.ui.favourite.FavoritesFragment"
        android:label="FavouriteFragment" >
        <action
            android:id="@+id/action_favouriteFragment_to_vacancyFragment"
            app:destination="@id/vacancyFragment" />
        <action
            android:id="@+id/action_favouriteFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/similarFragment"
        android:name="ru.practicum.android.diploma.ui.similar.SimilarFragment"
        android:label="SimilarFragment" />
    <fragment
        android:id="@+id/vacancyFragment"
        android:name="ru.practicum.android.diploma.ui.vacancy.VacancyFragment"
        android:label="VacancyFragment" >
        <action
            android:id="@+id/action_vacancyFragment_to_similarFragment"
            app:destination="@id/similarFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="ru.practicum.android.diploma.ui.filter.FilterFragment"
        android:label="FilterFragment" >
        <action
            android:id="@+id/action_filterFragment_to_filterPlaceOfWorkFragment"
            app:destination="@id/filterPlaceOfWorkFragment" />
        <action
            android:id="@+id/action_filterFragment_to_filterIndustryFragment"
            app:destination="@id/filterIndustryFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterIndustryFragment"
        android:name="ru.practicum.android.diploma.ui.filter.FilterIndustryFragment"
        android:label="FilterIndustryFragment" />
    <fragment
        android:id="@+id/filterPlaceOfWorkFragment"
        android:name="ru.practicum.android.diploma.ui.filter.FilterPlaceOfWorkFragment"
        android:label="FilterPlaceOfWorkFragment" />
</navigation>
